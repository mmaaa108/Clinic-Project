<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DashboardController"
            stylesheets="@style.css" styleClass="root">

   <!-- شريط علوي -->
   <top>
      <HBox alignment="CENTER" styleClass="top-section">
         <Label fx:id="welcomeLabel" styleClass="welcome-label" text="مرحبا بك" />
      </HBox>
   </top>

   <!-- المحتوى الرئيسي -->
   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 30 50;">

         <!-- إحصائيات -->
         <VBox spacing="10.0" styleClass="card" maxWidth="600">
            <Label text="إحصائيات العيادة" styleClass="card-title" />
            <Label text="الحالة الحالية للنظام" styleClass="card-subtitle" />
            <HBox alignment="CENTER" spacing="50.0">
               <VBox alignment="CENTER" spacing="5.0">
                  <Label text="المرضى" styleClass="statistic-label" />
                  <Label fx:id="patientsCountLabel" text="0" styleClass="statistic-value" />
               </VBox>
               <VBox alignment="CENTER" spacing="5.0">
                  <Label text="الأطباء" styleClass="statistic-label" />
                  <Label fx:id="doctorsCountLabel" text="0" styleClass="statistic-value" />
               </VBox>
               <VBox alignment="CENTER" spacing="5.0">
                  <Label text="المواعيد" styleClass="statistic-label" />
                  <Label fx:id="appointmentsCountLabel" text="0" styleClass="statistic-value" />
               </VBox>
            </HBox>
         </VBox>

         <!-- إجراءات سريعة -->
         <VBox spacing="10.0" styleClass="card" maxWidth="700">
            <Label text="الإجراءات السريعة" styleClass="card-title" />
            <Label text="الوصول إلى وظائف الإدارة الرئيسية" styleClass="card-subtitle" />
            <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 15 0;">
               <VBox spacing="5.0" styleClass="action-item">
                  <Label text="إدارة المرضى" styleClass="action-title" />
                  <Label text="إضافة وتعديل وتنظيم سجلات المرضى" styleClass="action-description" />
                  <Button onAction="#navigateToPatients" text="اذهب إلى المرضى" styleClass="btn-accent" />
               </VBox>
               <VBox spacing="5.0" styleClass="action-item">
                  <Label text="إدارة الأطباء" styleClass="action-title" />
                  <Label text="تسجيل وإدارة الأطباء" styleClass="action-description" />
                  <Button onAction="#navigateToDoctors" text="اذهب إلى الأطباء" styleClass="btn-primary" />
               </VBox>
               <VBox spacing="5.0" styleClass="action-item">
                  <Label text="إدارة المواعيد" styleClass="action-title" />
                  <Label text="تتبع وحجز المواعيد" styleClass="action-description" />
                  <Button onAction="#navigateToAppointments" text="اذهب إلى المواعيد" styleClass="btn-danger" />
               </VBox>
            </HBox>
         </VBox>

         <!-- تسجيل خروج -->
         <HBox alignment="CENTER" style="-fx-padding: 15;">
             <Button onAction="#logout" styleClass="btn-muted" text="تسجيل الخروج" />
         </HBox>
      </VBox>
   </center>
</BorderPane>
